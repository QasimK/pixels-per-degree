{
    "root": true,
    "extends": "standard",
    "plugins": [
        "standard"
    ],
    "env": {
        "es6": true,
        "commonjs": true,
        "mocha": true
    },
    "rules": {
        "indent": [2, 4],
        "space-before-function-paren": [2, "never"],
        "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
        "comma-dangle": [2, "always-multiline"]
    }
}
